<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Lista de Carros</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h3 mb-0">Lista de Carros</h1>
      <a href="/carro/add" class="btn btn-primary">Adicionar Carro</a>
    </div>

    <% if (typeof success !== 'undefined' && success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <% if (!carros || carros.length === 0) { %>
      <div class="card">
        <div class="card-body text-center">
          Nenhum carro encontrado.
        </div>
      </div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
          <thead class="table-light">
            <tr>
              <th>#</th>
              <th>Marca</th>
              <th>Modelo</th>
              <th>Ano</th>
              <th>Placa</th>
              <th>Diária</th>
              <th>Disponível</th>
              <th>Imagem</th>
              <th class="text-end">Ações</th>
            </tr>
          </thead>
          <tbody>
            <% carros.forEach(function(carro, i) { %>
              <tr>
                <td><%= i + 1 %></td>
                <td><%= carro.marca || '-' %></td>
                <td><%= carro.modelo || '-' %></td>
                <td><%= carro.ano || '-' %></td>
                <td><%= carro.placa || '-' %></td>
                <td>
                  <% if (typeof carro.diaria === 'number') { %>
                    R$ <%= carro.diaria.toFixed(2) %>
                  <% } else { %>
                    -
                  <% } %>
                </td>
                <td>
                  <% if (carro.disponivel) { %>
                    <span class="badge bg-success">Sim</span>
                  <% } else { %>
                    <span class="badge bg-danger">Não</span>
                  <% } %>
                </td>
                <td>
                  <% if (carro.imagem && carro.imagemTipo) { %>
                    <img src="data:<%= carro.imagemTipo %>;base64,<%= carro.imagem.toString('base64') %>" 
                         alt="Imagem do carro" class="img-thumbnail" style="width: 70px; height: 50px; object-fit: cover;">
                  <% } else { %>
                    <span class="text-muted">Sem imagem</span>
                  <% } %>
                </td>
                <td class="text-end">
                  <a href="/carro/<%= carro._id %>/editar" class="btn btn-sm btn-outline-secondary me-1">Editar</a>
                  <form action="/carro/<%= carro._id %>?_method=DELETE" method="post" class="d-inline" onsubmit="return confirmDelete(event)">
                    <button type="submit" class="btn btn-sm btn-outline-danger">Excluir</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>

    <% if (typeof totalPaginas !== 'undefined' && totalPaginas > 1) { %>
      <nav class="mt-3" aria-label="Paginação">
        <ul class="pagination">
          <% for (let i = 1; i <= totalPaginas; i++) { %>
            <li class="page-item <%= (i === (pagina || 1)) ? 'active' : '' %>">
              <a class="page-link" href="<%= (baseUrl || '/carro') + '?pagina=' + i %>"><%= i %></a>
            </li>
          <% } %>
        </ul>
      </nav>
    <% } %>
  </div>

  <script>
    function confirmDelete(e) {
      if (!confirm('Deseja realmente excluir este carro? Esta ação não pode ser desfeita.')) {
        e.preventDefault();
        return false;
      }
      return true;
    }
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
