    <script>
async function carregarCarros() {
    const res = await fetch('/api/carros');
    const carros = await res.json();

    const grid = document.querySelector(".car-grid");
    grid.innerHTML = ""; // remove carros fixos

    carros.forEach(c => {
        const card = `
        <div class="car-card">
            <div class="car-image">
                <img src="/api/carros/${c._id}/imagem" alt="${c.modelo}">
            </div>
            <div class="car-info">
                <h3 class="car-title">${c.marca} ${c.modelo}</h3>

                <div class="car-details">
                    <div class="detail-item">
                        <span>Ano: ${c.ano}</span>
                    </div>
                    <div class="detail-item">
                        <span>Placa: ${c.placa}</span>
                    </div>
                </div>

                <button class="btn btn-primary">Alugar Agora</button>
            </div>
        </div>`;
        grid.innerHTML += card;
    });
}

carregarCarros();
</script>

