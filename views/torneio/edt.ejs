<%- include('../cabecalho.ejs') %>

<h1>Editar Torneio</h1>

<form action="/torneio/edt/<%= torneio._id %>" method="post">
  <div>
    <label for="nome">Nome do Torneio:</label><br>
    <input type="text" id="nome" name="nome" value="<%= torneio.nome %>" required>
  </div>

  <div>
    <label for="jogo">Jogo:</label><br>
    <input type="text" id="jogo" name="jogo" value="<%= torneio.jogo %>" required>
  </div>

  <div>
    <label for="dataInicio">Data Início:</label><br>
    <input type="date" id="dataInicio" name="dataInicio" value="<%= new Date(torneio.periodo.dataInicio).toISOString().slice(0,10) %>" required>
  </div>

  <div>
    <label for="dataFim">Data Fim:</label><br>
    <input type="date" id="dataFim" name="dataFim" value="<%= new Date(torneio.periodo.dataFim).toISOString().slice(0,10) %>" required>
  </div>

  <div>
    <label for="premiacao">Premiação (R$):</label><br>
    <input type="number" step="0.01" id="premiacao" name="premiacao" value="<%= torneio.premiacao %>" required>
  </div>

  <div>
    <label for="status">Status:</label><br>
    <select id="status" name="status" required>
      <option value="Aberto" <%= torneio.status === 'Aberto' ? 'selected' : '' %>>Aberto</option>
      <option value="Em andamento" <%= torneio.status === 'Em andamento' ? 'selected' : '' %>>Em andamento</option>
      <option value="Finalizado" <%= torneio.status === 'Finalizado' ? 'selected' : '' %>>Finalizado</option>
    </select>
  </div>

  <br>
  <button type="submit">Salvar</button>
</form>

<%- include('../rodape.ejs') %>
